#include <TinyGPS++.h>
#include <HardwareSerial.h>

// Set up the GPS module's serial port (UART2)
HardwareSerial mySerial(2);  // Using UART2 (GPIO 16 RX2, GPIO 17 TX2)

TinyGPSPlus gps;  // Create a GPS object

void setup() {
  // Start Serial Monitor for debugging
  Serial.begin(115200);
  while (!Serial);

  // Start communication with GPS module
  mySerial.begin(9600, SERIAL_8N1, 16, 17);  // Set RX pin to GPIO16, TX pin to GPIO17
  Serial.println("GPS module is starting...");
}

void loop() {
  while (mySerial.available() > 0) {
    gps.encode(mySerial.read());  // Feed GPS data to the library

    if (gps.location.isUpdated()) {
      // Print latitude and longitude to Serial Monitor
      Serial.print("Latitude: ");
      Serial.print(gps.location.lat(), 6);  // Display latitude with 6 decimal places
      Serial.print(" | Longitude: ");
      Serial.print(gps.location.lng(), 6);  // Display longitude with 6 decimal places
      Serial.println();
    }

    // Optional: Display more information like altitude, speed, and number of satellites
    if (gps.altitude.isUpdated()) {
      Serial.print("Altitude: ");
      Serial.print(gps.altitude.meters());  // Altitude in meters
      Serial.println(" meters");
    }

    if (gps.speed.isUpdated()) {
      Serial.print("Speed: ");
      Serial.print(gps.speed.kmph());  // Speed in km/h
      Serial.println(" km/h");
    }

    if (gps.satellites.isUpdated()) {
      Serial.print("Satellites: ");
      Serial.println(gps.satellites.value());  // Number of satellites in view
    }
  }

  delay(1000);  // Delay 1 second before next loop
}
